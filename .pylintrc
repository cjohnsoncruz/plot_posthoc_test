[MASTER]
# Ignore patterns for files and directories
ignore=Function .py Storage,
       behavior figure annotation tests.ipynb,
       notebook_setup.py,
       .git,
       __pycache__,
       .pytest_cache,
       build,
       dist,
       *.egg-info

# Only check files in src/ directory
init-hook='import sys; sys.path.append("src")'

[MESSAGES CONTROL]
# Disable specific warnings that are too strict or not applicable
disable=
    missing-module-docstring,
    missing-function-docstring,
    too-many-arguments,
    too-many-positional-arguments,
    too-many-locals,
    too-many-branches,
    import-error,
    wrong-import-order,
    unused-import,
    unused-variable,
    unused-argument,
    pointless-string-statement,
    line-too-long,
    trailing-whitespace,
    trailing-newlines,
    missing-final-newline,
    superfluous-parens,
    singleton-comparison,
    redefined-outer-name,
    possibly-used-before-assignment,
    expression-not-assigned,
    no-else-return,
    consider-using-with,
    unspecified-encoding,
    dangerous-default-value,
    invalid-name,
    unidiomatic-typecheck,
    undefined-variable,
    use-dict-literal

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Allow the body of an if to be on the same line if there is no else
single-line-if-stmt=yes

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,ax,df,x,y,id,np,pd

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of branch for function / method body
max-branches=15

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=numpy.*,pandas.*,matplotlib.*,seaborn.*,scipy.*
